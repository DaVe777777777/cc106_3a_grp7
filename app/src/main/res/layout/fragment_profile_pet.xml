<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:background="#e5ceb7">

        <TextView
            android:id="@+id/profileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" MY PET"
            android:layout_marginTop="20dp"
            android:textSize="50sp"
            android:textColor="#774e23"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/pet2"
            android:contentDescription="App Logo" />
    </RelativeLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@drawable/rounded_box_background"
        android:textColor="#774e23"
        android:text="&lt; Back"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/new_card_bg"
        android:padding="16dp"
        android:orientation="vertical"

        >

        <!-- Icons for delete and update -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete Icon"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/updateIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_update"
                android:contentDescription="Update Icon"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/petProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Pet Profile Picture" />

        <TextView
            android:id="@+id/petNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#774e23"
            android:layout_gravity="center" />

        <!-- Gender and DOB row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textColor="#774e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/petGenderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#774e23"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | DOB:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#774e23"/>

            <TextView
                android:id="@+id/petDobTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#774e23"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#774e23"
            />

        <TextView
            android:id="@+id/petBreedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#774e23"/>

        </LinearLayout>

        <!-- Height and Weight row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#774e23"/>

            <TextView
                android:id="@+id/petHeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#774e23"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textSize="18sp"
                android:textColor="#774e23"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | Weight:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#774e23"/>

            <TextView
                android:id="@+id/petWeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#774e23"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="18sp"
                android:textColor="#774e23"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_vaccination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:backgroundTint="#e5ceb7"
        android:drawableLeft="@drawable/ic_vaccine"
        android:text="Vaccination"
        android:textColor="#774e23"
        android:textSize="16sp"/>
</LinearLayout>

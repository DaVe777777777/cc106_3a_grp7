<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationFragment"
    android:background="@color/white">

    <!-- Notification Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTIFICATION"
        android:textColor="#774e23"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:background="#e5ceb7"
        android:layout_alignParentTop="true" />




    <!-- ScrollView for birthday notifications -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="280dp">

        <LinearLayout
            android:id="@+id/birthdayNotificationBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- This will display birthday cards -->
        </LinearLayout>
    </ScrollView>



    <!-- ScrollView for vaccine notifications -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/vaccineNotificationBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- This will display vaccine due cards -->
        </LinearLayout>
    </ScrollView>

</FrameLayout>

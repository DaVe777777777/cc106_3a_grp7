<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#e5ceb7"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        >

        <!-- Profile Text (Top-Left) -->
        <TextView
            android:id="@+id/profileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE "
            android:layout_marginTop="240dp"
            android:paddingLeft="10dp"
            android:textSize="50sp"
            android:textColor="#774e23"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_profile2" />

        <!-- Log Out Button (Top-Right, same row) -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:drawableTop="@drawable/ic_logout"
            android:gravity="center"
            android:backgroundTint="#ff0000"

            />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/pet2"
            android:contentDescription="App Logo"


            />
    </RelativeLayout>

    <!-- Username and Password Fields in the middle -->
    <LinearLayout
        android:id="@+id/profileFieldsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Username Label and Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:textColor="#774e23"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="230dp"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#774e23"
            android:background="@drawable/edittext_background"
            android:singleLine="true"
            android:ellipsize="end"
            android:scrollHorizontally="true" />

        <!-- Old Password Label and Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old Password :"
            android:textColor="#774e23"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#774e23"
            android:background="@drawable/edittext_background" />

        <!-- New Password Label and Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password :"
            android:textColor="#774e23"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#774e23"
            android:background="@drawable/edittext_background" />

        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="UPDATE"
            android:textColor="#774e23"
            android:textSize="20sp" />
    </LinearLayout>


</FrameLayout>



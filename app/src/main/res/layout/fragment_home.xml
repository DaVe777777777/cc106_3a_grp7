<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5ceb7">

        <TextView
            android:id="@+id/profileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAWTNER"
            android:layout_marginTop="20dp"
            android:textSize="50sp"
            android:textColor="#774e23"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/pet2"
            android:contentDescription="App Logo" />

        <RelativeLayout
            android:id="@+id/welcomeRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileText"
            android:layout_marginTop="23dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textSize="50sp"
                android:textColor="#774e23"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notification"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Notification Icon"
                app:tint="#774e23" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="30sp"
        android:textColor="#eb7c55"
        android:textStyle="bold"
        android:layout_marginTop="167dp"
        android:paddingLeft="7dp"
        android:background="#FFFFFF" />

    <!-- Center-aligned content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="165dp">

        <!-- Pets Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/totalPetsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="70sp"
                android:textColor="#774e23"
                android:gravity="center" />

            <TextView
                android:id="@+id/petsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pets"
                android:textSize="24sp"
                android:textColor="#774e23"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>

        <!-- Vaccines Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            android:gravity="center">

            <TextView
                android:id="@+id/totalVaccinesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="70sp"
                android:textColor="#774e23"
                android:gravity="center" />

            <TextView
                android:id="@+id/vaccinesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccines"
                android:textSize="24sp"
                android:textColor="#774e23"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/petText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" MY PETS"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="#774e23"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homePetRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal" />


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>

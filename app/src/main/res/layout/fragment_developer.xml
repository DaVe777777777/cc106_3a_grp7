<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEVELOPERS"
        android:textColor="#774e23"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:background="#e5ceb7"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/groupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  GROUP 7"
        android:textColor="#774e23"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"/>

    <!-- Developer Names -->
    <TextView
        android:id="@+id/developerNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Dave De Leon\nRussel Vincent Cuevas\nArchie Devera"
        android:textColor="#774e23"

        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"/>


    <TextView
        android:id="@+id/citecText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   CITEC"
        android:textColor="#774e23"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"/>

</FrameLayout>